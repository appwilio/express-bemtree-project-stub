    // иначе рендерим весь page целиком
    return applyCtx({
        block : 'page',
        favicon : '/favicon.ico',
        mods : { view : this.data.view },
        head : [
            { elem : 'meta', attrs : { name : 'viewport', content : 'width=1000' } },
