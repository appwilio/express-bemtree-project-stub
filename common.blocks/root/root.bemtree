block('root').def()(function() {
    var ctx = this.ctx;
    // пробрасываем data вглубь по дереву
    this.data = ctx.data;

    this.data.baseUrl = 'http://baseUrl';

    // если задан context — требуется отрендерить не целую страницу, а лишь эту конкретную часть
